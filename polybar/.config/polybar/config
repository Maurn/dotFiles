[colors]
;background = ${xrdb:color0:#222}
background = #cc000000
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

success = #00ff00
failure = #ff0000

inactive = #cc222222
active = #cc003ea3

[bar/bottom]
monitor = ${env:MONITOR}
width = 100%
height = 30
offset-x = 0
offset-y = 0
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

bottom = true
line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 4


font-0 = NotoSans-Regular:size=10;2
font-1 = FontAwesome:size=12;3


modules-left = i3
modules-center = 
modules-right = volume torn eth date

tray-position = right
tray-padding = 0
tray-transparent = false
tray-background = #cc000000

;wm-restack = 

override-redirect = false

[module/torn]
type=custom/script
exec = ~/.config/polybar/torn-status
interval = 5

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true



label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = ${colors.active}
;label-focused-underline = ${self.active}
label-focused-padding = 4

label-visible = %index%
label-visible-background = ${colors.inactive}
label-visible-padding = 4

label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 4

label-urgent = %index%
label-urgent-background = #cc900000
label-urgent-padding = 4

[module/eth]
type = internal/network
interface = enp3s0
interval = 1

format-connected-prefix = " "
;format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
label-connected-foreground = ${colors.success}

format-disconnected = <label-disconnected>
format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.failure}
label-disconnected = "%ifname% down"
label-disconnected-foreground = #66
;format-disconnected-underline = ${colors.failure}

[module/date]
type = internal/date
interval = 5

date = "%a - %d/%m/%Y"

time = %H:%M

;format-prefix = 
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

label = %date% - %time%

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-muted =  muted
label-muted-foreground = #66

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[settings]
screenchange-reload = true

throttle-output = 5
throttle-output-for = 10

[global/wm]
margin-top = 0
margin-bottom = 0
