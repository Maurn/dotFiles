alias ls='ls --color=auto'
alias reboot='sudo reboot'
alias tree='tree -C'
alias pacin='pacaur -S'
alias pacun='sudo pacman -Rs'
alias update-mirrors='sudo reflector --verbose --country 'Denmark' --age 12 --sort rate --save /etc/pacman.d/mirrorlist'
alias update-system='update-mirrors && pacaur -Syu'
alias i3config='vim ~/.config/i3/config'
alias zconfig='vim $ZDOTDIR/.zshrc'
alias aconfig='vim $ZDOTDIR/.aliases'
alias irc='irssi'
